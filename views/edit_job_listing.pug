extends layout

block content
  h1
    i.fas.fa-edit &nbsp;
    span #{title}
  h4
    i.fas.fa-user &nbsp;
    a(href='/users/' + job_listing.author) You
  hr
  form(method='POST', action='/listings/edit/' + job_listing._id)
    #form-group
      label Title*
      input.form-control(name='title', type='text', value= job_listing.title)
    br
    #form-group
      label Description*
      textarea.form-control(name='desc', type='text')= job_listing.desc
    br
    #form-group
      label Rate of Pay
      input.form-control(name='pay', type='text', value= job_listing.pay)
    br
    #form-group
      label Address
      input.form-control(name='address', type='text', value= job_listing.address)
    br
    //-
      Images do not upload or submit
    #form-group
      label Photo
      br
      input#file(name='photo', type='file', accept='image/*')
    br
    a.btn.btn-outline-light(href='/listings/', style='margin-right: 20px')
      i.fas.fa-angle-double-left
    button.btn.btn-outline-success(type='submit')
      i.fas.fa-check