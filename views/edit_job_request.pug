extends layout

block content
  h1 #{title}
  h4 Posted By: You
  hr
  form(method='POST', action='/requests/edit/' + job_request._id)
    #form-group
      label Title*
      input.form-control(name='title', type='text', value= job_request.title)
    br
    #form-group
      label Description*
      textarea.form-control(name='desc', type='text')= job_request.desc
    br
    #form-group
      label Expected Pay
      input.form-control(name='pay', type='text', value= job_request.pay)
    br
    a.btn.btn-outline-light(href='/requests/', style='margin-right: 20px;')
      i.fas.fa-angle-double-left
    input.btn.btn-outline-primary(type='submit', value='Submit')