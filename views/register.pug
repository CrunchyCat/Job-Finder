extends layout

block content
  h1
    i.fas.fa-user-circle &nbsp;
    span Create an Account
  h4
    i.far.fa-user &nbsp;
    span Start Posting Today
  hr
  form(method='POST', action='/users/register')
    #form-group
      label Name*
      input.form-control(name='name', type='text')
    p
    #form-group
      label Email*
      input.form-control(name='username', type='text')
    br
    p
    #form-group
      label Password*
      input.form-control(name='password', type='password')
    p
    #form-group
      label Confirm Password*
      input.form-control(name='password2', type='password')
    br
    input.btn.btn-outline-primary(type='submit', value='Register')